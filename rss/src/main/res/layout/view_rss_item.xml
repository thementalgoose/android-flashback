<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="@dimen/paddingMedium"
    android:paddingTop="10dp"
    android:paddingEnd="@dimen/paddingMedium"
    android:paddingBottom="10dp"
    tools:background="?attr/rssBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageContainer"
        android:layout_width="@dimen/newsIconSize"
        android:layout_height="@dimen/newsIconSize"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/imageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            tools:background="#ff0000" />

        <TextView
            android:id="@+id/label"
            style="@style/RSS.Items.SourceThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="AS" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        style="@style/RSS.Items.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingNSmall"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageContainer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="No conversations with Vettel about 2021 seat, says Racing Point boss Otmar Szafnauer" />

    <TextView
        android:id="@+id/description"
        style="@style/RSS.Items.Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="6"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Something about something about formula 1 " />

    <TextView
        android:id="@+id/source"
        style="@style/RSS.Items.Source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="0dp"
        android:paddingEnd="4dp"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:text="autosport.com" />

    <TextView
        android:id="@+id/date"
        style="@style/RSS.Items.Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawablePadding="4dp"
        android:drawableTint="?attr/rssTextTertiary"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/source"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:text="10:45 on 31st Jan" />

</androidx.constraintlayout.widget.ConstraintLayout>