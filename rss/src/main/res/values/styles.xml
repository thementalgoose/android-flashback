<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="RSS.LightTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#4A34B6</item>
        <item name="colorPrimaryDark">#4A34B6</item>
        <item name="colorAccent">#4A34B6</item>

        <item name="android:statusBarColor">?attr/rssBackground</item>
        <item name="android:navigationBarColor">?attr/rssBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="rssBrandPrimary">#4A34B6</item>

        <item name="rssAdd">#4CAF50</item>
        <item name="rssRemove">#f44336</item>

        <item name="rssBackground">#FBFBFB</item>
        <item name="rssBackgroundSecondary">#E8E8E8</item>
        <item name="rssBackgroundNewsBar">#E8E8E8</item>

        <item name="rssTextPrimary">#181818</item>
        <item name="rssTextSecondary">#383838</item>
        <item name="rssTextTertiary">#585858</item>
    </style>

    <style name="RSS.DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#9575CD</item>
        <item name="colorPrimaryDark">#7E57C2</item>
        <item name="colorAccent">#9575CD</item>

        <item name="android:statusBarColor">?attr/rssBackground</item>
        <item name="android:navigationBarColor">?attr/rssBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="rssBrandPrimary">#9575CD</item>

        <item name="rssAdd">#4CAF50</item>
        <item name="rssRemove">#f44336</item>

        <item name="rssBackground">#282828</item>
        <item name="rssBackgroundSecondary">#383838</item>
        <item name="rssBackgroundNewsBar">#282828</item>

        <item name="rssTextPrimary">#F8F8F8</item>
        <item name="rssTextSecondary">#E8E8E8</item>
        <item name="rssTextTertiary">#CCCCCC</item>
    </style>






    <!-- =========================================== -->

    <!-- =========================================== -->

    <!--#region Home -->

    <style name="RSS.Toolbar" parent="RSS.Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/textSizeXLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--#endregion -->

    <style name="RSS" />
    <style name="RSS.Text">
        <item name="android:textColor">?attr/rssTextPrimary</item>
    </style>

    <!-- RSS -->

    <!-- =============================================== -->

    <style name="RSS.Input.Text" parent="RSS.Text">
        <item name="android:paddingStart">@dimen/paddingMedium</item>
        <item name="android:paddingEnd">@dimen/paddingMedium</item>
        <item name="android:paddingTop">@dimen/paddingSmall</item>
        <item name="android:paddingBottom">@dimen/paddingSmall</item>
        <item name="android:background">@drawable/rss_background_input</item>
        <item name="android:textColor">?attr/rssTextPrimary</item>
        <item name="android:textColorHint">?attr/rssTextTertiary</item>
    </style>

    <style name="RSS.Message" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeXSmall</item>
        <item name="android:textColor">?attr/rssTextTertiary</item>
    </style>

    <style name="RSS.Network.Error" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/rssTextTertiary</item>
    </style>

    <!-- ================================================================= -->

    <!--#region RSS Configure -->

    <style name="RSS.Configure.Header" parent="RSS.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RSS.Configure.Subtitle" parent="RSS.Text">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/rssTextSecondary</item>
    </style>

    <style name="RSS.Configure.QuickAdd.SourceThumb" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RSS.Configure.QuickAdd.Url" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/rssTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RSS.Configure.Item.SourceThumb" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RSS.Configure.Item.Url" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/rssTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RSS.Configure.Item.RssFeed" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">?attr/rssTextSecondary</item>
    </style>

    <!--#endregion -->

    <!-- =========================================== -->

    <!-- =========================================== -->

    <!--#region Settings -->

    <style name="RSS.Settings.Category" parent="RSS.Text">
        <item name="android:textColor">?attr/rssBrandPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RSS.Settings.Preference.Title" parent="RSS.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RSS.Settings.Preference.Description" parent="RSS.Text" />

    <!--#endregion -->


    <!-- =========================================== -->

    <!-- =========================================== -->

    <!--#region News -->

    <style name="RSS.Items.Title" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/rssTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RSS.Items.Description" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/rssTextSecondary</item>
    </style>

    <style name="RSS.Items.Date" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">?attr/rssTextTertiary</item>
    </style>

    <style name="RSS.Items.Source" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?attr/rssTextTertiary</item>
    </style>

    <style name="RSS.Items.SourceThumb" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--#endregion -->

    <!-- =========================================== -->

    <!-- =========================================== -->

    <!--#region Web view -->

    <style name="Text.Web.Title" parent="RSS.Text" />

    <style name="Text.Web.Domain" parent="RSS.Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">?attr/rssTextTertiary</item>
    </style>

    <!--#endregion -->

</resources>