<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">?attr/f1TextPrimary</item>
    </style>

    <style name="Text.Toolbar" parent="Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/textSizeXLarge</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Settings -->

    <style name="Settings.All.Title" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Settings.All.Subtitle" parent="Text">
        <item name="android:textColor">?attr/f1TextSecondary</item>
    </style>

    <style name="Settings.BottomSheet.Title" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Settings.BottomSheet.Subtitle" parent="Text">
        <item name="android:textColor">?attr/f1TextSecondary</item>
    </style>

    <style name="Settings.BottomSheet.Item" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/f1TextSecondary</item>
    </style>

    <!--#region Settings -->

    <style name="Text.Settings.Category" parent="Text">
        <item name="android:textColor">?attr/rssBrandPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Settings.Preference.Title" parent="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Settings.Preference.Description" parent="Text" />

    <!--#endregion -->

</resources>