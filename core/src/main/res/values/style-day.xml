<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4A34B6</item>
        <item name="colorPrimaryDark">#4A34B6</item>
        <item name="colorAccent">@color/logo_gradient_1</item>

        <item name="android:statusBarColor">?attr/f1BackgroundPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="f1BackgroundHighlighted">#334A34B6</item>

        <item name="f1TextPrimary">#181818</item>
        <item name="f1TextSecondary">#383838</item>
        <item name="f1TextTertiary">#585858</item>
        <item name="f1PipeColor">#787878</item>
        <item name="f1BackgroundNavPrimary">#F2F2F2</item>
        <item name="f1BackgroundPrimary">#FBFBFB</item>
        <item name="f1BackgroundPanel">#E4E4E4</item>
        <item name="f1BackgroundSecondary">#E8E8E8</item>

        <item name="f1Favourite">@color/favourite</item>

        <item name="f1TextInversePrimary">#F8F8F8</item>
        <item name="f1TextInverseSecondary">#E8E8E8</item>
        <item name="f1TextInverseTertiary">#D8D8D8</item>
        <item name="f1BackgroundInversePrimary">#181818</item>
        <item name="f1BackgroundInverseSecondary">#383838</item>

        <item name="f1BackgroundLoading">#EEffffff</item>
        <item name="f1BackgroundOverlay">#44FBFBFB</item>
        <item name="f1BackgroundSkeletonAlpha">0.8</item>

        <item name="f1Loading">#a8a8a8</item>

        <item name="f1PurpleSector">#673AB7</item>

        <item name="f1Pos1">#D3BC4D</item>
        <item name="f1Pos2">#C2C2C2</item>
        <item name="f1Pos3">#D29342</item>

        <item name="f1DeltaPositive">#f44336</item>
        <item name="f1DeltaNeutral">?attr/f1TextSecondary</item>
        <item name="f1DeltaNegative">#4CAF50</item>
        <item name="f1DeltaWaiting">#FFA000</item>

        <!-- RSS -->
        <item name="rssBrandPrimary">?attr/colorPrimary</item>
        <item name="rssAdd">#4CAF50</item>
        <item name="rssRemove">#f44336</item>
        <item name="rssBackground">?attr/f1BackgroundPrimary</item>
        <item name="rssBackgroundSecondary">?attr/f1BackgroundSecondary</item>
        <item name="rssBackgroundNewsBar">?attr/f1BackgroundSecondary</item>
        <item name="rssTextPrimary">?attr/f1TextPrimary</item>
        <item name="rssTextSecondary">?attr/f1TextSecondary</item>
        <item name="rssTextTertiary">?attr/f1TextTertiary</item>
    </style>

    <style name="LightTheme.Translucent" parent="LightTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#00ffffff</item>
    </style>

    <style name="LightTheme.AboutThisApp" parent="LightTheme">

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- About This App Activity -->
        <item name="aboutThisApp_header">?attr/colorPrimary</item>
        <item name="aboutThisApp_textPrimary">#181818</item>
        <item name="aboutThisApp_textSecondary">#383838</item>
        <item name="aboutThisApp_textToolbar">#f8f8f8</item>
        <item name="aboutThisApp_iconPrimary">?attr/aboutThisApp_textPrimary</item>
        <item name="aboutThisApp_backgroundPrimary">?attr/f1BackgroundPrimary</item>
        <item name="aboutThisApp_backgroundSecondary">?attr/f1BackgroundSecondary</item>
    </style>
