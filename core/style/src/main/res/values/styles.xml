<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- ============================================================================== -->

    <style name="Text">
        <item name="android:textColor">?attr/contentPrimary</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="Text.Headline.1" parent="Text">
        <item name="android:textColor">?attr/contentPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Text.Headline.1.Brand" parent="Text.Headline.1">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Headline.2" parent="Text">
        <item name="android:textColor">?attr/contentPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Text.Headline.2.Brand" parent="Text.Headline.2">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textColor">?attr/contentPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title.Strong" parent="Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Brand" parent="Text.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Section" parent="Text">
        <item name="android:textColor">?attr/contentSecondary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Section.Brand" parent="Text.Section">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Text.Body.1" parent="Text">
        <item name="android:textColor">?attr/contentPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body.2" parent="Text">
        <item name="android:textColor">?attr/contentSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Caption" parent="Text">
        <item name="android:textColor">?attr/contentTertiary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ============================================================================== -->

    <style name="Style">
        <item name="android:textColor">?attr/contentPrimary</item>
    </style>

    <style name="Style.Button.Primary" parent="Style">
        <item name="android:foreground">@drawable/ripple_rounded_small</item>
        <item name="android:theme">@style/Text.Body.2</item>
        <item name="android:textColor">?attr/contentPrimaryInverse</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:paddingStart">@dimen/paddingMedium</item>
        <item name="android:paddingEnd">@dimen/paddingMedium</item>
        <item name="android:paddingTop">@dimen/paddingSmall</item>
        <item name="android:drawablePadding">@dimen/paddingXSmall</item>
        <item name="android:paddingBottom">@dimen/paddingSmall</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Style.Button.Secondary" parent="Style">
        <item name="android:foreground">@drawable/ripple_rounded_small</item>
        <item name="android:theme">@style/Text.Section</item>
        <item name="android:textColor">?attr/contentSecondary</item>
        <item name="android:background">@drawable/background_button_secondary</item>
        <item name="android:paddingStart">@dimen/paddingSmall</item>
        <item name="android:paddingEnd">@dimen/paddingSmall</item>
        <item name="android:paddingTop">@dimen/paddingXSmall</item>
        <item name="android:drawablePadding">@dimen/paddingXSmall</item>
        <item name="android:paddingBottom">@dimen/paddingXSmall</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Style.Button.Tertiary" parent="Style">
        <item name="android:foreground">@drawable/ripple_rounded_small</item>
        <item name="android:theme">@style/Text.Caption</item>
        <item name="android:textColor">?attr/contentTertiary</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:paddingStart">@dimen/paddingSmall</item>
        <item name="android:paddingEnd">@dimen/paddingSmall</item>
        <item name="android:paddingTop">@dimen/paddingXSmall</item>
        <item name="android:drawablePadding">@dimen/paddingXSmall</item>
        <item name="android:paddingBottom">@dimen/paddingXSmall</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Style.Input" parent="Style">
        <item name="android:importantForAutofill">no</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:theme">@style/Text.Body.1</item>
        <item name="android:textColorHint">?attr/contentTertiary</item>
        <item name="android:textColor">?attr/contentPrimary</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:paddingTop">@dimen/paddingMedium</item>
        <item name="android:paddingBottom">@dimen/paddingMedium</item>
        <item name="android:paddingStart">@dimen/paddingMedium</item>
        <item name="android:paddingEnd">@dimen/paddingMedium</item>
    </style>

    <style name="Style.Checkbox" parent="Style">
        <item name="android:padding">0dp</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>

</resources>