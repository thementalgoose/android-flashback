<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text.Toolbar" parent="Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/textSizeXLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Toolbar.Expanded" parent="Text.Toolbar">
        <item name="android:textSize">@dimen/textSizeFeature</item>
    </style>

    <style name="Text.Toolbar.Collapsed" parent="Text.Toolbar">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <!-- #region Bottom Sheet -->

    <style name="Settings.BottomSheet.Title" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Settings.BottomSheet.Subtitle" parent="Text">
        <item name="android:textColor">?attr/contentSecondary</item>
    </style>

    <style name="Settings.BottomSheet.Item" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/contentSecondary</item>
    </style>

    <style name="Settings.BottomSheet.Content" parent="Text">
        <item name="android:textColor">?attr/contentSecondary</item>
    </style>

    <!-- #endregion -->

    <!-- #region Settings -->

    <style name="Text.Settings.Category" parent="Text">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Text.Settings.Preference.Title" parent="Text">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Text.Settings.Preference.Description" parent="Text">
        <item name="android:textColor">?attr/contentTertiary</item>
    </style>

    <!-- #endregion -->

</resources>