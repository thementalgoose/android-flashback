<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--#region Widgets -->

    <style name="Text.Widget.Title" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">#fcfcfc</item>
    </style>

    <style name="Text.Widget.Subtitle" parent="Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">#fcfcfc</item>
    </style>

    <style name="Text.Widget.Days" parent="Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/textSizeXLarge</item>
        <item name="android:textColor">#fcfcfc</item>
    </style>

    <style name="Text.Widget.DaysUntil" parent="Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">#fcfcfc</item>
    </style>

    <!--#endregion -->

    <style name="Text.UpNext.Title" parent="Settings.BottomSheet.Title" />

    <style name="Text.UpNext.RaceName" parent="Text">
        <item name="android:textColor">?attr/contentSecondary</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.UpNext.Circuit" parent="Text">
        <item name="android:textColor">?attr/contentTertiary</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="Text.UpNext.Round" parent="Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">?attr/contentTertiary</item>
    </style>

    <style name="Text.UpNext.Countdown" parent="Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.UpNext.CountdownLabel" parent="Text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">?attr/contentSecondary</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="Text.UpNext.Date" parent="Text">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">?attr/contentTertiary</item>
    </style>

    <!--#endregion -->

</resources>