<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start|center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvName"
        style="@style/Text.ConstructorStandings.Driver.Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lewis Hamilton" />

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="@dimen/driverFlagSize"
        android:layout_height="@dimen/driverFlagSize"
        android:layout_marginStart="@dimen/paddingXSmall"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/gb" />

    <TextView
        android:id="@+id/tvNumber"
        style="@style/Text.ConstructorStandings.Driver.Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingSmall"
        app:layout_constraintStart_toEndOf="@id/imgFlag"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="44" />

</androidx.constraintlayout.widget.ConstraintLayout>