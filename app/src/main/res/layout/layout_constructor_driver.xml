<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start|center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvName"
        style="@style/Text.ConstructorStandings.Driver.Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Lewis Hamilton" />

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="@dimen/driverFlagSize"
        android:layout_height="@dimen/driverFlagSize"
        android:layout_marginStart="@dimen/paddingXSmall"
        tools:src="@drawable/gb" />

    <tmg.flashback.views.RaceNumberView
        android:id="@+id/tvNumber"
        style="@style/Text.ConstructorStandings.Driver.Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingXSmall"
        tools:text="44" />

</LinearLayout>