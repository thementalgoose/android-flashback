<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/paddingMedium">

    <ImageView
        android:id="@+id/imgCountry"
        android:layout_width="@dimen/circuitImageSize"
        android:layout_height="@dimen/circuitImageSize"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginTop="@dimen/paddingSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/au" />

    <TextView
        android:id="@+id/country"
        style="@style/Text.CircuitInfo.Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingMedium"
        android:text="Australia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCountry"
        app:layout_constraintTop_toTopOf="@id/imgCountry" />

    <TextView
        android:id="@+id/status"
        style="@style/Text.CircuitInfo.Status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCountry"
        app:layout_constraintTop_toBottomOf="@id/country"
        tools:text="Summary" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/paddingSmall"
            android:paddingEnd="@dimen/paddingSmall">

            <TextView
                android:id="@+id/maps"
                style="@style/Text.Pill.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_ripple"
                android:clickable="true"
                android:drawableStart="@drawable/ic_map"
                android:drawablePadding="@dimen/paddingXSmall"
                android:drawableTint="?attr/f1TextPrimary"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingEnd="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/circuit_info_maps" />

            <TextView
                android:id="@+id/wikipedia"
                style="@style/Text.Pill.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/paddingSmall"
                android:background="@drawable/rounded_ripple"
                android:clickable="true"
                android:drawableStart="@drawable/ic_wikipedia"
                android:drawablePadding="@dimen/paddingXSmall"
                android:drawableTint="?attr/f1TextPrimary"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="@dimen/paddingSmall"
                android:paddingTop="@dimen/paddingXSmall"
                android:paddingEnd="@dimen/paddingSmall"
                android:paddingBottom="@dimen/paddingXSmall"
                android:text="@string/circuit_info_wikipedia"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/maps"
                app:layout_constraintTop_toBottomOf="@id/status" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>