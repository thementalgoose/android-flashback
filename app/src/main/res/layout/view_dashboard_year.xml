<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple"
    android:paddingStart="@dimen/paddingMedium"
    android:paddingTop="@dimen/paddingSmall"
    android:paddingEnd="@dimen/paddingMedium"
    android:paddingBottom="@dimen/paddingSmall">

    <TextView
        android:id="@+id/year"
        style="@style/Text.Dashboard.Year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2019" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pill"
        android:layout_width="24dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/year" />

    <TextView
        android:id="@+id/season"
        style="@style/Text.Dashboard.Subtitles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pill"
        tools:text="Formula 1's 70th season" />

    <TextView
        android:id="@+id/races"
        style="@style/Text.Dashboard.Subtitles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/season"
        tools:text="21 races completed" />

    <androidx.cardview.widget.CardView
        android:id="@+id/constructorCard"
        android:layout_width="@dimen/dashboardYearIconSize"
        android:layout_height="@dimen/dashboardYearIconSize"
        android:layout_marginTop="@dimen/paddingSmall"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/constructorText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/driverCard"
        android:layout_width="@dimen/dashboardYearIconSize"
        android:layout_height="@dimen/dashboardYearIconSize"
        android:layout_marginTop="@dimen/paddingSmall"
        android:layout_marginEnd="@dimen/paddingSmall"
        app:layout_constraintEnd_toStartOf="@id/constructorCard"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/driverImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <tmg.labelledprogressbar.LabelledProgressBar
        android:id="@+id/labelledBar"
        android:layout_width="@dimen/dashboardProgressBarWidth"
        android:layout_height="@dimen/dashboardProgressBarHeight"
        android:layout_marginTop="@dimen/paddingSmall"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverCard"
        app:lpb_radius="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>