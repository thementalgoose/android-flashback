<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/paddingSmall">

    <ImageView
        android:id="@+id/imgGold"
        android:layout_width="0dp"
        android:layout_height="@dimen/podium1"
        android:layout_marginStart="@dimen/paddingSmall"
        android:layout_marginTop="@dimen/paddingXLarge"
        android:layout_marginEnd="@dimen/paddingSmall"
        android:background="?attr/f1Pos1"
        app:layout_constraintEnd_toStartOf="@id/imgBronze"
        app:layout_constraintStart_toEndOf="@id/imgSilver"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSilver"
        android:layout_width="0dp"
        android:layout_height="@dimen/podium2"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingSmall"
        android:background="?attr/f1Pos2"
        app:layout_constraintBottom_toBottomOf="@id/imgGold"
        app:layout_constraintEnd_toStartOf="@id/imgGold"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgBronze"
        android:layout_width="0dp"
        android:layout_height="@dimen/podium3"
        android:layout_marginStart="@dimen/paddingSmall"
        android:layout_marginEnd="@dimen/paddingMedium"
        android:background="?attr/f1Pos3"
        app:layout_constraintBottom_toBottomOf="@id/imgGold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgGold" />

    <ImageView
        android:id="@+id/cell1"
        android:layout_width="0dp"
        android:layout_height="@dimen/paddingLarge"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginTop="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgGold" />

    <ImageView
        android:id="@+id/cell2"
        android:layout_width="0dp"
        android:layout_height="@dimen/paddingLarge"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginTop="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cell1" />

    <ImageView
        android:id="@+id/cell3"
        android:layout_width="0dp"
        android:layout_height="@dimen/paddingLarge"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginTop="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cell2" />

</androidx.constraintlayout.widget.ConstraintLayout>