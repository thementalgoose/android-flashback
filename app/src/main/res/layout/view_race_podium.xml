<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/layout1"
        layout="@layout/layout_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingMedium"
        app:layout_constraintEnd_toEndOf="@id/imgGold"
        app:layout_constraintStart_toStartOf="@id/imgGold"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layout2"
        layout="@layout/layout_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingSmall"
        app:layout_constraintBottom_toTopOf="@id/imgSilver"
        app:layout_constraintEnd_toEndOf="@id/imgSilver"
        app:layout_constraintStart_toStartOf="@id/imgSilver" />

    <include
        android:id="@+id/layout3"
        layout="@layout/layout_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paddingSmall"
        app:layout_constraintBottom_toTopOf="@id/imgBronze"
        app:layout_constraintEnd_toEndOf="@id/imgBronze"
        app:layout_constraintStart_toStartOf="@id/imgBronze" />

    <ImageView
        android:id="@+id/imgGold"
        android:layout_width="0dp"
        android:layout_height="@dimen/podium1"
        android:layout_marginStart="@dimen/paddingSmall"
        android:layout_marginTop="@dimen/paddingSmall"
        android:layout_marginEnd="@dimen/paddingSmall"
        android:background="?attr/f1Pos1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgBronze"
        app:layout_constraintStart_toEndOf="@id/imgSilver"
        app:layout_constraintTop_toBottomOf="@id/layout1" />

    <TextView
        android:id="@+id/tvPoints1"
        style="@style/Text.Podium.Points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/imgGold"
        app:layout_constraintStart_toStartOf="@id/imgGold"
        app:layout_constraintTop_toTopOf="@id/imgGold"
        tools:text="26 points" />

    <ImageView
        android:id="@+id/imgSilver"
        android:layout_width="0dp"
        android:layout_height="@dimen/podium2"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginEnd="@dimen/paddingSmall"
        android:background="?attr/f1Pos2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgGold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPoints2"
        style="@style/Text.Podium.Points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/imgSilver"
        app:layout_constraintStart_toStartOf="@id/imgSilver"
        app:layout_constraintTop_toTopOf="@id/imgSilver"
        tools:text="18 points" />

    <ImageView
        android:id="@+id/imgBronze"
        android:layout_width="0dp"
        android:layout_height="@dimen/podium3"
        android:layout_marginStart="@dimen/paddingSmall"
        android:layout_marginEnd="@dimen/paddingMedium"
        android:background="?attr/f1Pos3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgGold" />

    <TextView
        android:id="@+id/tvPoints3"
        style="@style/Text.Podium.Points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/imgBronze"
        app:layout_constraintStart_toStartOf="@id/imgBronze"
        app:layout_constraintTop_toTopOf="@id/imgBronze"
        tools:text="15 points" />

</androidx.constraintlayout.widget.ConstraintLayout>