<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vConstructorColor"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/paddingSmall"
        app:layout_constraintBottom_toBottomOf="@id/tvConstructor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDriver"
        style="@style/Text.Season.Race.Qualifying.Driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingXSmall"
        android:paddingTop="@dimen/paddingXSmall"
        android:paddingEnd="@dimen/paddingXSmall"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/vConstructorColor"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sebastian Vettel" />

    <TextView
        android:id="@+id/tvConstructor"
        style="@style/Text.Season.Race.Qualifying.Constructor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingXSmall"
        android:paddingEnd="@dimen/paddingXSmall"
        android:paddingBottom="@dimen/paddingXSmall"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/vConstructorColor"
        app:layout_constraintTop_toBottomOf="@id/tvDriver"
        android:text="Ferrari" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/f1BackgroundSecondary"
        app:layout_constraintBottom_toBottomOf="@id/q1Time"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/q1Time"
        style="@style/Text.Season.Race.Qualifying.Time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/tvConstructor"
        app:layout_constraintEnd_toStartOf="@id/q2Time"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:text="1:24.203" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/f1BackgroundSecondary"
        app:layout_constraintBottom_toBottomOf="@id/q1Time"
        app:layout_constraintEnd_toStartOf="@id/q2Time"
        app:layout_constraintStart_toEndOf="@id/q1Time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/q2Time"
        style="@style/Text.Season.Race.Qualifying.Time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/tvConstructor"
        app:layout_constraintEnd_toStartOf="@id/q3Time"
        app:layout_constraintStart_toEndOf="@id/q1Time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:text="1:23.203" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/f1BackgroundSecondary"
        app:layout_constraintBottom_toBottomOf="@id/q2Time"
        app:layout_constraintEnd_toStartOf="@id/q3Time"
        app:layout_constraintStart_toEndOf="@id/q2Time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/q3Time"
        style="@style/Text.Season.Race.Qualifying.Time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/tvConstructor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/q2Time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:text="1:23.102" />

</androidx.constraintlayout.widget.ConstraintLayout>