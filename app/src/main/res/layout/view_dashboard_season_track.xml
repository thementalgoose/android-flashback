<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/paddingMedium"
    android:paddingTop="@dimen/paddingSmall"
    android:paddingEnd="@dimen/paddingMedium"
    android:paddingBottom="@dimen/paddingSmall">

    <ImageView
        android:id="@+id/imgCountry"
        android:layout_width="@dimen/dashboardTrackImageSize"
        android:layout_height="@dimen/dashboardTrackImageSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/au" />

    <TextView
        android:id="@+id/tvRaceName"
        style="@style/Text.Dashboard.Track.Title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:paddingStart="@dimen/paddingMedium"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@id/imgCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCountry"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Australian Grand Prix" />

</androidx.constraintlayout.widget.ConstraintLayout>