<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/f1BackgroundPrimary"
    android:fitsSystemWindows="false">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:elevation="0dp"
        app:layout_behavior="tmg.flashback.utils.AppBarLockableBehavior">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="exitUntilCollapsed|scroll|enterAlways">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/f1BackgroundPrimary"
                android:fitsSystemWindows="false">

                <TextView
                    android:id="@+id/season"
                    style="@style/Text.Toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/paddingMedium"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:ellipsize="end"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="@dimen/toolbarSettingsIcon"
                    android:paddingTop="@dimen/paddingMedium"
                    android:paddingEnd="@dimen/toolbarSettingsIcon"
                    android:paddingBottom="@dimen/paddingMedium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2020" />

                <ImageButton
                    android:id="@+id/settings"
                    android:layout_width="@dimen/toolbarSettingsIcon"
                    android:layout_height="@dimen/toolbarSettingsIcon"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:background="@drawable/rounded_ripple"
                    android:contentDescription="@string/settings_title"
                    android:src="@drawable/nav_settings"
                    android:tint="?attr/f1TextPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/season"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/season" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <me.saket.inboxrecyclerview.InboxRecyclerView
        android:id="@+id/dataList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:listitem="@layout/view_home_track" />

    <me.saket.inboxrecyclerview.page.ExpandablePageLayout
        android:id="@+id/expandablePageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/f1BackgroundPrimary" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/f1BackgroundNavPrimary"
        android:fitsSystemWindows="true"
        app:itemIconTint="@drawable/selector_bottom_nav_color"
        app:itemTextColor="@drawable/selector_bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_home" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/paddingMedium"
        android:background="?attr/f1BackgroundLoading"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="?attr/actionBarSize"
        android:visibility="gone"
        tools:visibility="visible">

        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:id="@+id/skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:alpha="?attr/f1BackgroundSkeletonAlpha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/homeSkeletonHeight"
                    android:layout_height="@dimen/homeSkeletonHeight"
                    android:layout_marginStart="@dimen/paddingMedium"
                    android:layout_marginTop="@dimen/paddingSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/paddingSmall"
                    android:layout_marginTop="@dimen/paddingSmall"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon1"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line2"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/paddingSmall"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon1" />

                <View
                    android:id="@+id/line3"
                    app:layout_constraintTop_toBottomOf="@id/line2"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/paddingSmall"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon1" />

                <View
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/homeSkeletonHeight"
                    android:layout_height="@dimen/homeSkeletonHeight"
                    android:layout_marginStart="@dimen/paddingMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/line4"/>

                <View
                    android:id="@+id/line4"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/paddingSmall"
                    android:layout_marginTop="@dimen/paddingMedium"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon2"
                    app:layout_constraintTop_toBottomOf="@id/line3" />

                <View
                    android:id="@+id/line5"
                    app:layout_constraintTop_toBottomOf="@id/line4"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/paddingSmall"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon2" />

                <View
                    app:layout_constraintTop_toBottomOf="@id/line5"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/paddingSmall"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="@dimen/paddingMedium"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/icon2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.faltenreich.skeletonlayout.SkeletonLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bottomSheet"
        layout="@layout/bottom_sheet_season"
        android:elevation="8dp"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>