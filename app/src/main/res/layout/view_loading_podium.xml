<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/skeletonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingSmall"
        android:paddingEnd="@dimen/paddingSmall"
        android:paddingBottom="@dimen/paddingMedium">

        <ImageView
            android:id="@+id/p1"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginTop="@dimen/paddingMedium"
            android:layout_marginEnd="@dimen/paddingSmall"
            app:layout_constraintEnd_toStartOf="@id/p3"
            app:layout_constraintStart_toEndOf="@id/p2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginEnd="@dimen/paddingSmall"
            app:layout_constraintBottom_toBottomOf="@id/p1"
            app:layout_constraintEnd_toStartOf="@id/p1"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/p3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginEnd="@dimen/paddingSmall"
            app:layout_constraintBottom_toBottomOf="@id/p1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/p1" />

        <ImageView
            android:id="@+id/r1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginTop="@dimen/paddingMedium"
            android:layout_marginEnd="@dimen/paddingSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/p1" />

        <ImageView
            android:id="@+id/r2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginTop="@dimen/paddingMedium"
            android:layout_marginEnd="@dimen/paddingSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/r1" />

        <ImageView
            android:id="@+id/r3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginTop="@dimen/paddingMedium"
            android:layout_marginEnd="@dimen/paddingSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/r2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.faltenreich.skeletonlayout.SkeletonLayout>