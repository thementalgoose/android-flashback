    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTrackList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/paddingMedium"
            android:layout_marginBottom="@dimen/paddingMedium"
            android:src="@drawable/ic_track_icon" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnvNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/f1BackgroundPrimary"
            app:itemIconTint="@drawable/selector_bottom_nav_color"
            app:itemTextColor="@drawable/selector_bottom_nav_color"
            app:menu="@menu/menu_static" />

    </LinearLayout>

    <View
        android:id="@+id/vBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fadedBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
