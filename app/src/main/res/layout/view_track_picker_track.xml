<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingSmall"
        android:layout_marginTop="@dimen/paddingXSmall"
        android:layout_marginEnd="@dimen/paddingSmall"
        android:layout_marginBottom="@dimen/paddingXSmall"
        android:background="@drawable/selector_text_option"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/rounded_ripple"
        android:paddingStart="@dimen/paddingSmall"
        android:paddingTop="@dimen/paddingXSmall"
        android:paddingEnd="@dimen/paddingSmall"
        android:paddingBottom="@dimen/paddingXSmall">

        <ImageView
            android:id="@+id/imgCountry"
            android:layout_width="@dimen/trackPickerCountrySize"
            android:layout_height="@dimen/trackPickerCountrySize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/au" />

        <TextView
            android:id="@+id/tvCountry"
            style="@style/Text.TrackPicker.TrackCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingSmall"
            app:layout_constraintBottom_toBottomOf="@id/imgCountry"
            app:layout_constraintStart_toEndOf="@id/imgCountry"
            app:layout_constraintTop_toTopOf="@id/imgCountry"
            tools:text="Australia" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>