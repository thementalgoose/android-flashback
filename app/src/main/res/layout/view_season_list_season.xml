<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple">

    <View
        android:id="@+id/pipeTop"
        android:layout_width="@dimen/bottomSheetBoxPipeSize"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/paddingXSmall"
        app:layout_constraintBottom_toBottomOf="@id/cardview"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pipeBottom"
        android:layout_width="@dimen/bottomSheetBoxPipeSize"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/paddingXSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cardview"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintTop_toTopOf="@id/cardview" />

    <TextView
        android:id="@+id/label"
        style="@style/Text.BottomSheet.Item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingMedium"
        android:paddingTop="@dimen/paddingNSmall"
        android:paddingEnd="0dp"
        android:paddingBottom="@dimen/paddingNSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/favourite"
        app:layout_constraintStart_toEndOf="@id/cardview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2019" />

    <ImageButton
        android:id="@+id/favourite"
        android:layout_width="@dimen/bottomSheetIconSize"
        android:layout_height="@dimen/bottomSheetIconSize"
        android:layout_marginEnd="@dimen/paddingNSmall"
        android:background="@drawable/ripple_rounded"
        android:paddingStart="@dimen/paddingSmall"
        android:paddingTop="@dimen/paddingSmall"
        android:paddingEnd="@dimen/paddingSmall"
        android:paddingBottom="@dimen/paddingSmall"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_star_filled" />

    <tmg.flashback.views.CircleView
        android:id="@+id/cardview"
        android:layout_width="@dimen/seasonListCircleSize"
        android:layout_height="@dimen/seasonListCircleSize"
        android:layout_marginStart="@dimen/paddingMedium"
        android:layout_marginTop="@dimen/paddingSmall"
        android:layout_marginBottom="@dimen/paddingSmall"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <tmg.flashback.views.CircleView
        android:id="@+id/highlight"
        android:layout_width="@dimen/seasonListCircleSelectedSize"
        android:layout_height="@dimen/seasonListCircleSelectedSize"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="@id/cardview"
        app:layout_constraintBottom_toBottomOf="@id/cardview"
        app:layout_constraintStart_toStartOf="@id/cardview"
        app:layout_constraintEnd_toEndOf="@id/cardview" />

</androidx.constraintlayout.widget.ConstraintLayout>