<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FlashbackAppTheme.Default" parent="FlashbackAppTheme" />

    <style name="FlashbackAppTheme.MaterialYou" parent="FlashbackAppTheme" />

    <style name="FlashbackAppTheme.Sync" parent="FlashbackAppTheme">
        <item name="android:statusBarColor">@color/splash_screen</item>
    </style>

    <!-- DAY -->

    <style name="FlashbackAppTheme" parent="AppTheme">

        <!-- Material theme colours -->

        <item name="colorPrimary">#0297d1</item>
        <item name="colorPrimaryDark">#0297d1</item>
        <item name="colorAccent">#00BCDA</item>

        <item name="android:statusBarColor">#0297d1</item>

    </style>

    <style name="FlashbackAppTheme.AboutThisApp" parent="FlashbackAppTheme">

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- About This App Activity -->
        <item name="aboutThisApp_header">?attr/colorPrimary</item>
        <item name="aboutThisApp_textPrimary">#181818</item>
        <item name="aboutThisApp_textSecondary">#383838</item>
        <item name="aboutThisApp_textToolbar">#f8f8f8</item>
        <item name="aboutThisApp_iconPrimary">?attr/contentPrimary</item>
        <item name="aboutThisApp_backgroundPrimary">?attr/backgroundPrimary</item>
        <item name="aboutThisApp_backgroundSecondary">?attr/backgroundSecondary</item>

    </style>

</resources>