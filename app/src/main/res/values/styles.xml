<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4A34B6</item>
        <item name="colorPrimaryDark">#4A34B6</item>
        <item name="colorAccent">#e53935</item>

        <item name="f1Selected">#4403DAC5</item>

        <item name="f1TextPrimary">#181818</item>
        <item name="f1TextSecondary">#383838</item>
        <item name="f1TextTertiary">#585858</item>
        <item name="f1BackgroundPrimary">#FBFBFB</item>
        <item name="f1BackgroundSecondary">#E8E8E8</item>

        <item name="f1TextInversePrimary">#F8F8F8</item>
        <item name="f1TextInverseSecondary">#E8E8E8</item>
        <item name="f1TextInverseTertiary">#D8D8D8</item>
        <item name="f1BackgroundInversePrimary">#181818</item>
        <item name="f1BackgroundInverseSecondary">#383838</item>

        <item name="f1BackgroundOverlay">#44FBFBFB</item>

        <item name="f1Loading">#a8a8a8</item>

        <item name="f1PurpleSector">#673AB7</item>

        <item name="f1Pos1">#D3BC4D</item>
        <item name="f1Pos2">#C2C2C2</item>
        <item name="f1Pos3">#D29342</item>

        <item name="f1DeltaPositive">#f44336</item>
        <item name="f1DeltaNeutral">?attr/f1TextSecondary</item>
        <item name="f1DeltaNegative">#4CAF50</item>
    </style>

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="LightTheme.Launcher" parent="LightTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>







    <style name="Text">
        <item name="android:textColor">?attr/f1TextPrimary</item>
    </style>

    <!-- Dashboard -->

    <style name="Text.Dashboard.Header" parent="Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Dashboard.Track.Title" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Dashboard.Track.TrackName" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Dashboard.Track.Round" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Dashboard.Track.Date" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Race -->

    <style name="Text.Race.Header" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Race.Round" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Race.Error.NotFound" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Race.Error.Network" parent="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/f1TextTertiary</item>
    </style>

















    <style name="Text.HomeStatic" parent="Text">
        <item name="android:textColor">?attr/f1TextInversePrimary</item>
    </style>
    <style name="Text.HomeStatic.Header" parent="Text.HomeStatic">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.HomeStatic.Country" parent="Text.HomeStatic">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goodtimes</item>
    </style>
    <style name="Text.HomeStatic.TrackName" parent="Text.HomeStatic">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.HomeStatic.Round" parent="Text.HomeStatic">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Text.HomeStatic.Date" parent="Text.HomeStatic">
        <item name="android:textSize">12sp</item>
    </style>













    <!-- Loading -->

    <style name="Text.Loading">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/f1Loading</item>
    </style>

    <!-- Error -->

    <style name="Text.Error">
        <item name="android:textColor">?attr/f1Loading</item>
    </style>

    <style name="Text.Error.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/f1Loading</item>
    </style>

    <!-- Release Notes -->

    <style name="Text.ReleaseNotes" parent="Text" />
    <style name="Text.ReleaseNotes.Header" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.ReleaseNotes.Content" parent="Text">

    </style>

    <style name="Text.Planned" parent="Text">
    </style>

    <!-- App Lockout -->

    <style name="Text.Lockout" parent="Text" />
    <style name="Text.Lockout.Text" parent="Text">

    </style>
    <style name="Text.Lockout.Button" parent="Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Swiper -->

    <style name="Text.Swiper" />
    <style name="Text.Swiper.Track" />
    <style name="Text.Swiper.Track.Header" parent="Text.Swiper.Track">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goodtimes</item>
    </style>
    <style name="Text.Swiper.Track.Circuit" parent="Text.Swiper.Track">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Driver -->

    <style name="Text.Driver" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Driver.Name" parent="Text.Driver">

    </style>
    <style name="Text.Driver.Number" parent="Text.Driver">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Podium -->

    <style name="Text.Podium" parent="Text">

    </style>
    <style name="Text.Podium.Position" parent="Text.Podium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/f1TextInversePrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Podium.Driver" parent="Text.Podium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Podium.Number" parent="Text.Podium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Podium.Constructor" parent="Text.Podium">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Text.Podium.Grid" parent="Text.Podium">

    </style>
    <style name="Text.Podium.Position.Absolute" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Podium.Position.Relative" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Podium.Time" parent="Text.Podium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Podium.Points" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/f1TextInversePrimary</item>
    </style>

    <!-- Qualifying layout -->

    <style name="Text.RaceResult" parent="Text" />
    <style name="Text.RaceResult.Position" parent="Text.RaceResult">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Constructor" parent="Text.RaceResult">
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Text.RaceResult.Points" parent="Text.RaceResult">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Header" parent="Text.RaceResult">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Position.Absolute" parent="Text.RaceResult">
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Position.Relative" parent="Text.RaceResult">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Time" parent="Text.RaceResult">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.RaceResult.Status" parent="Text.RaceResult">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Qualifying time -->

    <style name="Text.QualifyingTime" parent="Text" />
    <style name="Text.QualifyingTime.Header" parent="Text.QualifyingTime">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.QualifyingTime.Constructor" parent="Text.QualifyingTime">
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Text.QualifyingTime.Position" parent="Text.QualifyingTime">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.QualifyingTime.Time" parent="Text.QualifyingTime">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.QualifyingTime.Delta" parent="Text.QualifyingTime">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/f1DeltaPositive</item>
    </style>

    <!-- Picker -->

    <style name="Text.DatePicker" parent="Text" />
    <style name="Text.DatePicker.Header" parent="Text.DatePicker">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.TrackPicker" parent="Text" />
    <style name="Text.TrackPicker.Year" parent="Text.TrackPicker">

    </style>
    <style name="Text.TrackPicker.TrackCountry" parent="Text.TrackPicker">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goodtimes</item>
    </style>
    <style name="Text.TrackPicker.TrackName" parent="Text.TrackPicker">

    </style>

</resources>