<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>

        <item name="f1TextPrimary">#181818</item>
        <item name="f1TextSecondary">#383838</item>
        <item name="f1TextTertiary">#585858</item>
        <item name="f1BackgroundPrimary">#FBFBFB</item>
        <item name="f1BackgroundSecondary">#E8E8E8</item>

        <item name="f1TextInversePrimary">#F8F8F8</item>
        <item name="f1TextInverseSecondary">#E8E8E8</item>
        <item name="f1TextInverseTertiary">#D8D8D8</item>
        <item name="f1BackgroundInversePrimary">#181818</item>
        <item name="f1BackgroundInverseSecondary">#383838</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/f1TextPrimary</item>
    </style>
    <style name="Text.Season" />
    <style name="Text.Season.Track" />
    <style name="Text.Season.Track.Header" parent="Text.Season.Track">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goodtimes</item>
    </style>
    <style name="Text.Season.Track.Circuit" parent="Text.Season.Track">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Season.Race" parent="Text.Season" />
    <style name="Text.Season.Race.QualifyingList" parent="Text.Season.Race" />
    <style name="Text.Season.Race.QualifyingList.Time" parent="Text.Season.Race.QualifyingList">
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textColor">?attr/f1TextSecondary</item>
    </style>
    <style name="Text.Season.Race.QualifyingList.Driver" parent="Text.Season.Race.QualifyingList">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/f1TextSecondary</item>
    </style>
    <style name="Text.Season.Race.QualifyingList.Constructor" parent="Text.Season.Race.QualifyingList">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/f1TextSecondary</item>
    </style>

    <style name="Text.Season.Race.QualifyingGrid" parent="Text.Season.Race">
        <item name="android:textColor">?attr/f1TextInversePrimary</item>
    </style>
    <style name="Text.Season.Race.QualifyingGrid.Position" parent="Text.Season.Race.QualifyingGrid">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goodtimes</item>
    </style>
    <style name="Text.Season.Race.QualifyingGrid.Driver" parent="Text.Season.Race.QualifyingGrid">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/f1TextInverseSecondary</item>
    </style>
    <style name="Text.Season.Race.QualifyingGrid.Constructor" parent="Text.Season.Race.QualifyingGrid">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/f1TextInverseTertiary</item>
    </style>
    <style name="Text.Season.Race.QualifyingGrid.Time" parent="Text.Season.Race.QualifyingGrid">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/f1TextInverseTertiary</item>
    </style>

</resources>