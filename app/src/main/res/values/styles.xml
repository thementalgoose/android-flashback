<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>

        <item name="f1TextPrimary">#181818</item>
        <item name="f1TextSecondary">#383838</item>
        <item name="f1TextTertiary">#585858</item>
        <item name="f1BackgroundPrimary">#FBFBFB</item>
        <item name="f1BackgroundSecondary">#E8E8E8</item>

        <item name="f1TextInversePrimary">#F8F8F8</item>
        <item name="f1TextInverseSecondary">#E8E8E8</item>
        <item name="f1TextInverseTertiary">#D8D8D8</item>
        <item name="f1BackgroundInversePrimary">#181818</item>
        <item name="f1BackgroundInverseSecondary">#383838</item>

        <item name="f1PurpleSector">#7B1BA1</item>

        <item name="f1Pos1">#D3BC4D</item>
        <item name="f1Pos2">#D8D8D8</item>
        <item name="f1Pos3">#D29342</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/f1TextPrimary</item>
    </style>
    <style name="Text.Season" />
    <style name="Text.Season.Track" />
    <style name="Text.Season.Track.Header" parent="Text.Season.Track">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/goodtimes</item>
    </style>
    <style name="Text.Season.Track.Circuit" parent="Text.Season.Track">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Driver -->

    <style name="Text.Driver" parent="Text">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Driver.Name" parent="Text.Driver">

    </style>
    <style name="Text.Driver.Number" parent="Text.Driver">

    </style>

    <!-- Podium -->

    <style name="Text.Podium" parent="Text">

    </style>
    <style name="Text.Podium.Position" parent="Text.Podium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Podium.Driver" parent="Text.Podium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Podium.Number" parent="Text.Podium">

    </style>
    <style name="Text.Podium.Constructor" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Podium.Grid" parent="Text.Podium">

    </style>
    <style name="Text.Podium.Position.Absolute" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.Podium.Position.Relative" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Podium.Time" parent="Text.Podium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Podium.Points" parent="Text.Podium">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Qualifying layout -->

    <style name="Text.RaceResult" parent="Text" />
    <style name="Text.RaceResult.Position" parent="Text.RaceResult">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Constructor" parent="Text.RaceResult">
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Text.RaceResult.Points" parent="Text.RaceResult">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Position.Absolute" parent="Text.RaceResult">
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Position.Relative" parent="Text.RaceResult">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.RaceResult.Time" parent="Text.RaceResult">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.RaceResult.Status" parent="Text.RaceResult">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Qualifying time -->

    <style name="Text.QualifyingTime" parent="Text" />
    <style name="Text.QualifyingTime.Header" parent="Text.QualifyingTime">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.QualifyingTime.Constructor" parent="Text.QualifyingTime">
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Text.QualifyingTime.Position" parent="Text.QualifyingTime">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Text.QualifyingTime.Time" parent="Text.QualifyingTime">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.QualifyingTime.Delta" parent="Text.QualifyingTime">
        <item name="android:textSize">10sp</item>
    </style>


</resources>