<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tmg.flashback">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="tmg.flashback.FlashbackApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">

        <activity
            android:name="tmg.flashback.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LightTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".home.HomeActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".race.RaceActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".circuit.CircuitInfoActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".rss.RSSActivity"
            android:exported="false"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".settings.release.ReleaseActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".settings.SettingsActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".rss.settings.RSSSettingsActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".overviews.driver.DriverActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".overviews.driver.season.DriverSeasonActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".overviews.constructor.ConstructorActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".admin.lockout.LockoutActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name=".rss.configure.RSSConfigureActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <activity
            android:name="tmg.components.about.AboutThisAppActivity"
            android:label=""
            android:screenOrientation="portrait" />

    </application>

</manifest>