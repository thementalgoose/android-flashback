<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tmg.flashback">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="tmg.flashback.FlashbackApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/logo_gradient_1" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".dashboard.DashboardActivity"
            android:label="" />

        <activity
            android:name=".race.RaceActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".circuit.CircuitInfoActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".settings.release.ReleaseActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".settings.SettingsActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".settings.privacy.PrivacyPolicyActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".overviews.driver.DriverActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".overviews.driver.season.DriverSeasonActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".overviews.constructor.ConstructorActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".admin.lockout.LockoutActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name="tmg.components.about.AboutThisAppActivity"
            android:label=""
            android:theme="@style/Translucent" />



        <activity
            android:name=".rss.ui.RSSActivity"
            android:exported="false"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".rss.ui.configure.RSSConfigureActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <activity
            android:name=".rss.ui.settings.RSSSettingsActivity"
            android:label=""
            android:theme="@style/Translucent" />

        <!-- Subscribing -->

        <service
            android:name=".notifications.RaceNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>