<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/paddingMedium"
        android:paddingEnd="@dimen/paddingMedium">

        <TextView
            style="@style/Text.Headline.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingXLarge"
            android:paddingBottom="@dimen/paddingMedium"
            android:text="@string/debug_title" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_constant" />

        <TextView
            android:id="@+id/ad_id"
            style="@style/Text.Body.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_rounded_small"
            android:padding="2dp"
            tools:text="Ad Id\nabc-def-ghi" />

        <TextView
            android:id="@+id/fcm_id"
            style="@style/Text.Body.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_rounded_small"
            android:padding="2dp"
            tools:text="FCM ID\nabc-def-ghi" />

        <TextView
            android:id="@+id/device_udid"
            style="@style/Text.Body.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_rounded_small"
            android:padding="2dp"
            tools:text="Device UDID\nabc-def-ghi" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_sync_title" />

        <Button
            android:id="@+id/syncActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_sync_activity_launch"
            android:textAllCaps="false" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_config_url_title" />

        <EditText
            android:id="@+id/configUrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="https://flashback.pages.dev"
            android:importantForAutofill="no"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/configUrlSave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/debug_config_url_save"
                android:textAllCaps="false" />

            <Space
                android:layout_width="@dimen/paddingMedium"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/configUrlClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/debug_config_url_clear"
                android:textAllCaps="false" />

        </LinearLayout>


        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_style_guide_title" />

        <Button
            android:id="@+id/styleGuide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_style_guide"
            android:textAllCaps="false" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_notification_title" />

        <Button
            android:id="@+id/sendNotification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_notification_send_local"
            android:textAllCaps="false" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_network_title" />

        <Button
            android:id="@+id/networkOverview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_network_overview"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/networkDrivers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_network_drivers"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/networkConstructors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_network_constructors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/networkCircuits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_network_circuits"
            android:textAllCaps="false" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium"
            android:text="@string/debug_ads_title" />

        <Button
            android:id="@+id/advertSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/debug_ads_title"
            android:textAllCaps="false" />

        <tmg.flashback.ads.views.NativeBanner
            android:id="@+id/advert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMedium" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>