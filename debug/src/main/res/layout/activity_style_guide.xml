<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="?attr/backgroundPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/paddingMedium"
        android:paddingEnd="@dimen/paddingMedium">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Text.Headline.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headline 1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Text.Headline.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Headline 2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.Title"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                android:layout_weight="1"
                style="@style/Text.Title.Strong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title Strong" />

        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Text.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Section" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.Body.1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body 1" />

            <TextView
                style="@style/Text.Body.1.Strong"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body 1 Strong" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Text.Body.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body 2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Text.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caption" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/backgroundTertiary" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Style.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Body 2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Style.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <TextView
            style="@style/Style.Button.Tertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <EditText
            style="@style/Style.Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here.." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/paddingMedium" />

        <CheckBox
            style="@style/Style.Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

    </LinearLayout>

</ScrollView>