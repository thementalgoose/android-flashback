<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvPosition"
        style="@style/Text.QualifyingTime.Position"
        android:layout_width="@dimen/qualifyingListPositionWidth"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/paddingSmall"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/tvConstructor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <include
        android:id="@+id/layoutDriver"
        layout="@layout/layout_driver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingSmall"
        android:layout_marginTop="@dimen/paddingXSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPosition"
        app:layout_constraintTop_toTopOf="@id/tvPosition" />

    <View
        android:id="@+id/constructorColor"
        android:layout_width="4dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#99ff99" />

    <TextView
        android:id="@+id/tvConstructor"
        style="@style/Text.QualifyingTime.Constructor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/paddingXSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/constructorColor"
        app:layout_constraintStart_toStartOf="@id/layoutDriver"
        app:layout_constraintTop_toBottomOf="@id/layoutDriver"
        tools:text="Mercedes" />

    <TextView
        android:id="@+id/penalty"
        style="@style/Text.QualifyingTime.Delta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/paddingXSmall"
        android:text="@string/qualifying_grid_penalty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/layoutDriver"
        app:layout_constraintTop_toBottomOf="@id/tvConstructor" />

</androidx.constraintlayout.widget.ConstraintLayout>