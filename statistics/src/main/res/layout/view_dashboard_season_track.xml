<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_rectangle"
        android:paddingStart="@dimen/paddingMedium"
        android:paddingTop="@dimen/paddingSmall"
        android:paddingEnd="@dimen/paddingMedium"
        android:paddingBottom="@dimen/paddingSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/country"
            android:layout_width="@dimen/dashboardTrackImageSize"
            android:layout_height="@dimen/dashboardTrackImageSize"
            app:layout_constraintBottom_toBottomOf="@id/raceCountry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/raceName"
            tools:src="@drawable/au" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="@dimen/dashboardTrackStatusSize"
            android:layout_height="@dimen/dashboardTrackStatusSize"
            android:alpha="0.7"
            app:layout_constraintBottom_toTopOf="@id/country"
            app:layout_constraintEnd_toEndOf="@id/country"
            app:layout_constraintStart_toEndOf="@id/country"
            app:layout_constraintTop_toTopOf="@id/country" />

        <TextView
            android:id="@+id/raceName"
            style="@style/Text.Title.Strong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingMedium"
            android:layout_marginEnd="@dimen/paddingSmall"
            android:gravity="center|start"
            app:layout_constraintEnd_toStartOf="@id/barrier"
            app:layout_constraintStart_toEndOf="@id/country"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Australian Grand Prix" />

        <TextView
            android:id="@+id/circuitName"
            style="@style/Text.Body.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/raceName"
            app:layout_constraintStart_toStartOf="@id/raceName"
            app:layout_constraintTop_toBottomOf="@id/raceName"
            tools:text="Albert Park Circuit" />

        <TextView
            android:id="@+id/raceCountry"
            style="@style/Text.Body.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/raceName"
            app:layout_constraintStart_toStartOf="@id/raceName"
            app:layout_constraintTop_toBottomOf="@id/circuitName"
            tools:text="Australia" />

        <TextView
            android:id="@+id/round"
            style="@style/Text.Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Round 12" />

        <TextView
            android:id="@+id/date"
            style="@style/Text.Body.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/round"
            tools:text="21st Jan" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="round,date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingNSmall"
        android:layout_marginBottom="@dimen/paddingMedium"
        android:background="?attr/backgroundSecondary"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/ripple_rectangle"
        android:paddingStart="@dimen/paddingMedium"
        android:paddingTop="@dimen/paddingMedium"
        android:paddingEnd="@dimen/paddingMedium"
        android:paddingBottom="@dimen/paddingMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container">

        <ImageView
            android:importantForAccessibility="no"
            android:id="@+id/enlargedCountry"
            android:layout_width="@dimen/dashboardTrackImageSize"
            android:layout_height="@dimen/dashboardTrackImageSize"
            android:layout_marginTop="@dimen/paddingSmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/enlargedName"
            tools:src="@drawable/au" />

        <ImageView
            android:importantForAccessibility="no"
            android:id="@+id/enlargedStatus"
            android:layout_width="@dimen/dashboardTrackStatusSize"
            android:layout_height="@dimen/dashboardTrackStatusSize"
            android:alpha="0.7"
            app:layout_constraintBottom_toTopOf="@id/enlargedCountry"
            app:layout_constraintEnd_toEndOf="@id/enlargedCountry"
            app:layout_constraintStart_toEndOf="@id/enlargedCountry"
            app:layout_constraintTop_toTopOf="@id/enlargedCountry" />

        <TextView
            android:id="@+id/enlargedName"
            style="@style/Text.Title.Strong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/paddingMedium"
            android:layout_marginEnd="@dimen/paddingSmall"
            android:gravity="center|start"
            app:layout_constraintEnd_toStartOf="@id/enlargedRound"
            app:layout_constraintStart_toEndOf="@id/enlargedCountry"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Australian Grand Prix" />

        <TextView
            android:id="@+id/enlargedRound"
            style="@style/Text.Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Round 12" />

        <ImageView
            android:id="@+id/enlargedTrackIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/paddingSmall"
            android:layout_marginStart="@dimen/paddingSmall"
            android:layout_marginEnd="0dp"
            android:importantForAccessibility="no"
            android:minHeight="@dimen/dashboardEnlargedTrackHeight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/enlargedGuide"
            app:layout_constraintTop_toBottomOf="@id/enlargedName"
            app:tint="?attr/contentSecondary"
            tools:src="@drawable/circuit_albert_park" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/enlargedGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <tmg.flashback.ui.views.PassThroughRecyclerView
            android:id="@+id/enlargedSchedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/enlargedGuide"
            app:layout_constraintStart_toEndOf="@id/enlargedCountry"
            app:layout_constraintTop_toBottomOf="@id/enlargedRaceCountry"
            app:layout_constraintVertical_bias="0.0"
            tools:itemCount="8"
            tools:layout_height="100dp"
            tools:listitem="@layout/view_inline_schedule_item" />

        <TextView
            android:id="@+id/enlargedCircuitName"
            style="@style/Text.Body.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/enlargedGuide"
            app:layout_constraintStart_toStartOf="@id/enlargedName"
            app:layout_constraintTop_toBottomOf="@id/enlargedName"
            tools:text="Albert Park Circuit" />

        <TextView
            android:id="@+id/enlargedRaceCountry"
            style="@style/Text.Body.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/enlargedGuide"
            app:layout_constraintStart_toStartOf="@id/enlargedCircuitName"
            app:layout_constraintTop_toBottomOf="@id/enlargedCircuitName"
            tools:text="Australia" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
