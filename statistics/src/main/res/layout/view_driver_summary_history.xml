<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    tools:background="?attr/backgroundPrimary">

    <TextView
        android:id="@+id/year"
        style="@style/Text.Body.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="@dimen/driverOverviewPipeIndent"
        android:paddingTop="@dimen/paddingSmall"
        android:paddingEnd="@dimen/paddingMedium"
        android:paddingBottom="@dimen/paddingSmall"
        app:layout_constraintStart_toEndOf="@id/pipe"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2020" />

    <tmg.flashback.ui.views.PassThroughRecyclerView
        android:id="@+id/constructorList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="@integer/overScrollMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/year"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="4"
        tools:listitem="@layout/view_driver_constructors" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pipe"
        android:layout_width="@dimen/driverOverviewCircleSize"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/driverOverviewPipeIndent"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/pipeTop"
            android:layout_width="@dimen/driverOverviewPipeWidth"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/paddingXSmall"
            android:background="?attr/f1PipeColor"
            app:layout_constraintBottom_toBottomOf="@id/pipeCircle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/pipeBottom"
            android:layout_width="@dimen/driverOverviewPipeWidth"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/paddingXSmall"
            android:background="?attr/f1PipeColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/pipeCircle" />

        <ImageView
            android:id="@+id/pipeCircle"
            android:layout_width="@dimen/driverOverviewCircleSize"
            android:layout_height="@dimen/driverOverviewCircleSize"
            android:layout_marginTop="10dp"
            android:background="@drawable/pipe_indicator"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/star"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/ab_championship"
        android:src="@drawable/ic_star_filled_coloured"
        app:layout_constraintBottom_toBottomOf="@id/year"
        app:layout_constraintStart_toEndOf="@id/pipe"
        app:layout_constraintTop_toTopOf="@id/year" />

</androidx.constraintlayout.widget.ConstraintLayout>