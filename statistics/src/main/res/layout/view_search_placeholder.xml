<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="?attr/backgroundPrimary">

    <TextView
        android:id="@+id/title"
        style="@style/Text.Body.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="@dimen/paddingLarge"
        android:paddingTop="@dimen/paddingMedium"
        android:paddingEnd="@dimen/paddingLarge"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/search_category_get_started"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingLarge"
        android:layout_marginEnd="@dimen/paddingLarge"
        android:layout_marginBottom="@dimen/paddingMedium"
        android:alpha="0.5"
        android:minHeight="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/footnote"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/search" />

    <TextView
        android:id="@+id/footnote"
        style="@style/Text.Body.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="@dimen/paddingLarge"
        android:paddingTop="@dimen/paddingMedium"
        android:paddingEnd="@dimen/paddingLarge"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/search_category_ensure_internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>